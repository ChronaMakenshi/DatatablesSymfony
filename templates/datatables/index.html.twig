{% extends 'base.html.twig' %}

{% block title %}Hello DatatablesController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<table id="datatable" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Identifiant</th>
							<th>Nom du produit</th>
							<th>Prix</th>
							<th>Date de dernier achat</th>
						</tr>
					</thead>
					<tbody></tbody>
				</table>
			</div>
		</div>

	</div>
{% endblock %}
